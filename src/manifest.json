{
  "name": "chrome-kjs",
  "description": "Web开发辅助插件，集成二维码、常见的加密方法...",
  "version": "0.0.8",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "cookies",
    "webRequest",
    "*://*/*",
    "webRequestBlocking",
    "webNavigation"
  ],

  "content_scripts": [{
       "matches": ["http://*/*", "https://*/*"],
       "js": ["statics/js/content.js"],
       "run_at": "document_end",
       "all_frames": true
  }],

  "icons": {
      "16": "statics/images/favicon.png",
      "48": "statics/images/favicon.png",
      "128": "statics/images/favicon.png"
  },
  "background": {
      "page": "background.html"
  },


  "browser_action": {
    "default_icon": "statics/images/favicon.png",
    "default_popup": "popup.html"
  }
}
