{
  "manifest_version": 2,

  "name": "Livereload",
  "description": "结合grunt-watch，在指定域名的页面中加载livereload.js",
  "version": "1.0",

  "permissions": [
    "http://*/*", "https://*/*", "tabs"
  ],


  "content_scripts": [{
       "matches": ["http://*/*", "https://*/*"],
       "js": ["js/content_scripts.js"],
       "run_at": "document_end",
       "all_frames": true
  }],

  "background": {
      "page": "background.html"
  },


  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  }
}